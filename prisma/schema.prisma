generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

// Define the FinestAdmin model
model FinestAdmin {
  id        Int      @id @default(autoincrement())
  username  String   @db.VarChar(255) @unique
  password  String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Define the Testimony model
model Testimony {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255) // Field for the name of the person giving the testimony
  image     String   @db.Text // Field for the image URL/path
  text      String   @db.Text          // Field for the testimony text
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())                   // No default value
}

